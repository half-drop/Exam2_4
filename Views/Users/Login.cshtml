@{
    ViewBag.Title = "登录";
}

<main>
    <form action="/Users/Login" method="post">
        <div class="col-sm-8 col-md-5 mx-auto">
            <div class="text-center mt-4">
                <p class="font16">登录</p>
            </div>
            <div class="form-group mt-3 text-center">
                <div class="input-group justify-content-center">
                    <span class="input-group-text"><i class="icon-user iconfont"></i></span>
                    <input type="text" id="username" name="username" placeholder="请输入用户名" class="form-control" />
                </div>
            </div>
            <div class="form-group mt-3 text-center">
                <div class="input-group justify-content-center">
                    <span class="input-group-text"><i class="icon-lock iconfont"></i></span>
                    <input type="password" id="password" name="password" placeholder="请输入密码" class="form-control" />
                </div>
            </div>
            <div class="form-group mt-3 text-center">
                <button type="submit" class="btn btn-primary">登录</button>
            </div>
        </div>
    </form>
</main>