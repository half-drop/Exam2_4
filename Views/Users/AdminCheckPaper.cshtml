@model List<Exam1_7.Models.PaperViewModel>

@{
    ViewBag.Title = "试卷库";
}

<h1>试卷库</h1>

<table class="table">
    <thead>
        <tr>
            <th>试卷名称</th>
            <th>课程名称</th>
            <th>考试时间</th>
            <th>时长(分钟)</th>
            <th>总分</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var paper in Model)
        {
            <tr>
                <td>@paper.PaperName</td>
                <td>@paper.CourseName</td>
                <td>@paper.Time.ToString("yyyy-MM-dd")</td>
                <td>@paper.Longth</td>
                <td>@paper.SumMark</td>
                <td>
                    <a href="@Url.Action("TakeExam", "Users", new { paperId = paper.PaperID })" class="btn btn-primary">测试答题</a>
                </td>
            </tr>
        }
    </tbody>
</table>